<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/visit_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/button_scheduled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scheduled"
        android:backgroundTint="@color/green_scheduled"/>

    <Button
        android:id="@+id/button_not_scheduled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Scheduled"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/red_not_scheduled"/>

    <Button
        android:id="@+id/button_closed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Closed"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/black"/>
</LinearLayout>